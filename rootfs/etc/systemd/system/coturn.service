[Unit]
Description=Coturn
Wants=network.target
After=network-online.target

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Type=forking
User=turn
ExecStart=/usr/bin/podman container start coturn
ExecStop=/usr/bin/podman container stop coturn
Restart=always

[Install]
WantedBy=multi-user.target default.target
